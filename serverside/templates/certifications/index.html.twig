{% extends 'base.html.twig' %}

{% block title %}Certifications index{% endblock %}

{% block body %}
    <h1>Certifications index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre_certifications</th>
                <th>Description_certifications</th>
                <th>Image_certifications</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for certification in certifications %}
            <tr>
                <td>{{ certification.id }}</td>
                <td>{{ certification.titreCertifications }}</td>
                <td>{{ certification.descriptionCertifications }}</td>
                <td>{{ certification.imageCertifications }}</td>
                <td>
                    <a href="{{ path('app_certifications_show', {'id': certification.id}) }}">show</a>
                    <a href="{{ path('app_certifications_edit', {'id': certification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_certifications_new') }}">Create new</a>
{% endblock %}
